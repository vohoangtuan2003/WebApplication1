@model WebApplication1.Data.Product

@{
    ViewData["Title"] = "Details";

}
<h1> Details </h1>
<div class=" row ">
    <div class="col-5">
        <div>
            <h4>Details of the book:</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                @* <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AuthorId)
                </dt> *@
                @* <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AuthorId)
                </dd> *@
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BookPrice)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BookPrice)
                </dd>
                @* <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookImage)
                </dt>
                <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookImage)
                </dd> *@
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PublishedYear)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PublishedYear)
                </dd>


                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AuthorNavigation)
                </dt>

                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AuthorNavigation.AuthorId)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="" asp-route-id="@Model?.Id" class=" btn btn-primary store-btn float-right mr-5"><i class="fa-solid fa-cart-shopping"></i> Add To cart</a> |
            <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-backward"></i> Back </a>
        </div>

    </div>
    <div class="col-4">
        <img src="@Model.BookImage" class=" w-100" />

    </div>
</div>
